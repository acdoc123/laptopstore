@model IEnumerable<Ictshop.Models.Chitietdonhang>

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    var total = 0;
}

<h2>Details</h2>

<table class="table">
    <tr>
        <th>
            Code:
        </th>
        <th>
            Product Name:
        </th>
        <th>
            Quantity:
        </th>
        <th>
            Price:
        </th>
        <th>
           
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Donhang.Madon)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Sanpham.Tensp)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Soluong)
        </td>
        <td>
            <p><span>@String.Format("{0:0,0}", item.Dongia) VNĐ</span></p>
        </td>
        <th>
            <p><span>@String.Format("{0:0,0}", item.Dongia*item.Soluong) VNĐ</span></p>
        </th>
           <p style="color:white">@(total += (int)item.Dongia*(int)item.Soluong)</p>
    </tr>
}
    <p>Total: @String.Format("{0:0,0}", @total) VNĐ</p>
</table>
<br />
