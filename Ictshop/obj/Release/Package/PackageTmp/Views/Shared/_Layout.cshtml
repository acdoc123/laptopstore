
<!DOCTYPE HTML>
<html>
<head>
    <title>@ViewBag.Title - DUCK SHOP</title>
    <!-- Favicon-->
    <link rel="icon" type="image/x-icon" href="~/Assets/images/icon.ico" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <link href="~/Assets/css/style.css" rel="stylesheet" type="text/css" media="all" />
    <link href="~/Assets/css/menu.css" rel="stylesheet" type="text/css" media="all" />
    <link href="~/Assets/css/jquery-ui.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/js/all.min.js" crossorigin="anonymous"></script>
    <script src="~/Assets/js/jquery.min.js"></script>
    <script src="~/Assets/js/jquery-ui.js"></script>
    <script src="~/Assets/js/script.js" type="text/javascript"></script>
    <script type="text/javascript" src="~/Assets/js/move-top.js"></script>
    <script type="text/javascript" src="~/Assets/js/easing.js"></script>

</head>
<body>
    @{
        var u = Session["use"] as Ictshop.Models.Nguoidung;
    }
    <div class="wrap">
        <div class="header">
            <div class="header_top">
                <nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
                    <!-- Navbar Brand-->
                    <a href="/Home/index"><img src="~/Assets/images/logo.png" alt="" width="270" height="80" /></a>

                    <!-- Sidebar Toggle-->
                    <!-- Navbar Search-->
                    <form class="d-none d-md-inline-block form-inline ms-auto me-md-3 my-md-0" action="/Sanpham/Search" method="get">
                        <div class="input-group">
                            <input class="form-control" type="text" name="keyword" id="txtKeyword" placeholder="Search for Product" aria-label="Search for Product" aria-describedby="btnNavbarSearch" size="50" />
                            <button class="btn btn-primary" id="btnNavbarSearch" type="submit"><i class="fas fa-search"></i></button>
                        </div>
                    </form>
                   
                    <!-- Navbar-->
                    @{
                        if (u != null)
                        {
                            <div class="shopping_cart">
                                <div class="cart">
                                    @Html.Action("GioHangPartial", "GioHang")
                                </div>
                            </div>
                            <a class="ps-4">  </a>
                            <ul class="navbar-nav ms-auto ms-md-0 me-3 me-lg-4">
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false"><i class="fas fa-user fa-fw"></i></a>
                                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                                        <li><a class="dropdown-item" href="#!">Settings</a></li>
                                        <li><a class="dropdown-item" href="#!">Orders</a></li>
                                        <li><hr class="dropdown-divider" /></li>
                                        <li>
                                            <a class="dropdown-item" href="/User/DangXuat">Log Out</a>
                                        </li>
                                    </ul>
                                </li>
                            </ul>
                        }
                        else
                        {
                            <a class="ps-4">  </a>
                            <ul class="navbar-nav ms-auto ms-md-0 me-3 me-lg-4">
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false"><i class="fas fa-user fa-fw"></i></a>
                                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                                        <li><a class="dropdown-item" href="/User/Dangky">Register</a></li>
                                        <li><a class="dropdown-item" href="/User/Dangnhap">Login</a></li>
                                    </ul>
                                </li>
                            </ul>
                        }
                    }
                    
                </nav>
                <div class="clear"></div>
            </div>
            <div class="h_menu">
                <a id="touch-menu" class="mobile-menu" href="#">Menu</a>
                <nav>
                    <ul class="menu list-unstyled">
                        <li><a href="/Home/index">HOME</a></li>
                        <li><a href="/Danhmuc/SaleCategory">SALES</a></li>
                        <li class="activate">
                            <a href="/Danhmuc/LaptopCategory">LAPTOP</a>
                            <ul class="sub-menu list-unstyled sub-menu2">
                                    <div class="navg-drop-main">
                                        <div class="nav-drop">
                                           @Html.Action("DanhmucPartial", "Danhmuc")
                                        </div>
                                        <div class="clear"> </div>
                                    </div>
                            </ul>
                        </li>
                        @*<li>
                            <a href="products.html">PC Workstation</a>
                            <ul class="sub-menu list-unstyled sub-menu2">
                                <div class="navg-drop-main">
                                    <div class="nav-drop ">
                                        @Html.Action("DanhmucPartial", "Danhmuc")
                                    </div>
                                </div>
                            </ul>
                        </li>*@
                        <li><a href="/Home/About">About</a></li>
                        <div class="clear"> </div>
                    </ul>
                </nav>
                <script src="~/Assets/js/menu.js" type="text/javascript"></script>
            </div>
        </div>
        <div class="main">
            @RenderBody()
        </div>
    </div>
    <div class="footer">
        <div class="wrapper">
            <div class="section group">
                <div class="col_1_of_4 span_1_of_4">
                    <h4>Information</h4>
                    <ul>
                        <li><a href="#">About Us</a></li>
                        <li><a href="#">Customer Service</a></li>
                        <li><a href="#"><span>Advanced Search</span></a></li>
                        <li><a href="#">Orders and Returns</a></li>
                    </ul>
                </div>
                <div class="col_1_of_4 span_1_of_4">
                    <h4>Why buy from us</h4>
                    <ul>
                        <li><a href="#">About Us</a></li>
                        <li><a href="#">Customer Service</a></li>
                        <li><a href="#">Privacy Policy</a></li>
                        <li><a href="#"><span>Search Terms</span></a></li>
                    </ul>
                </div>
                <div class="col_1_of_4 span_1_of_4">
                    <h4>My account</h4>
                    <ul>
                        <li><a href="#">Sign In</a></li>
                        <li><a href="#">View Cart</a></li>
                        <li><a href="#">Track My Order</a></li>
                        <li><a href="#">Help</a></li>
                    </ul>
                </div>
                <div class="col_1_of_4 span_1_of_4">
                    <h4>Contact</h4>
                    <ul>
                        <li><span>+801030312</span></li>
                        <li><span>+0338231632</span></li>
                    </ul>
                    <div class="social-icons">
                        <h4>Follow Us</h4>
                        <ul>
                            <li class="facebook"><a href="#" target="_blank"> </a></li>
                            <li class="twitter"><a href="#" target="_blank"> </a></li>
                            <li class="googleplus"><a href="#" target="_blank"> </a></li>
                            <li class="contact"><a href="#" target="_blank"> </a></li>
                            <div class="clear"></div>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="copy_right">
                <p>&copy; @DateTime.Now.Year - HQV</p>
            </div>
        </div>
    </div>
    <link href="~/Assets/css/flexslider.css" rel='stylesheet' type='text/css' />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="~/Assets/js/scripts.js"></script>
    <script defer src="~/Assets/js/jquery.flexslider.js"></script>
    <script type="text/javascript">
								$(function(){
								
								});
								$(window).load(function(){
								  $('.flexslider').flexslider({
									animation: "slide",
									start: function(slider){
									  $('body').removeClass('loading');
									}
								  });
								});
    </script>
    <script src="~/Assets/js/baseController.js"></script>
    @RenderSection("jsFooter", required: false)

</body>
</html>
