@model Ictshop.Models.Nguoidung
@{
    ViewBag.Title = "Setting";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    h2 {
        font-size: 25px;
        text-transform: uppercase;
        letter-spacing: 2px;
        margin-top: 10px;
        margin-bottom: 20px;
        color: #6A0888;
    }
</style>
<h2>Change Your Password</h2>
