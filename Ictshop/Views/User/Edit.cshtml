@model Ictshop.Models.Nguoidung
@{
    ViewBag.Title = "Setting";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    h2 {
        font-size: 25px;
        text-transform: uppercase;
        letter-spacing: 2px;
        margin-top: 10px;
        margin-bottom: 20px;
        color: #6A0888;
    }
    .form-register
    {
       padding: 16px;
    }
    .textarea {
  width: 55%;
  padding: 15px;
  margin: 5px 0 22px 0;
  display: inline-block;
  border: none;
  background: #f1f1f1;
}
    .textarea:focus {
  background-color: #ddd;
  outline: none;
}
    .registerbtn {
  background-color: #6A0888;
  color: white;
  padding: 16px 20px;
  margin: 8px 0;
  margin-left:19.5%;
  border: none;
  cursor: pointer;
  width: 20%;
  opacity: 0.9;
  border-radius:4px;
}
    label{
        font-weight:bold;
    }
.registerbtn:hover {
  opacity:1;
}
a {
  color: dodgerblue;
}

/* Set a grey background color and center the text of the "sign in" section */
.signin {
  background-color: #f1f1f1;
  text-align: center;
  margin-left:2.5%;
  width:50%;
}
.text-danger{
    color:red;
}
.alert-success{
    background-color:blueviolet;
    color:white;
    width: 15%;
    padding: 10px;
    margin-left:12.5%;
    text-align:center;
}
</style>
<h2>Change Your Information</h2>
@*<a href="/User/Changepwd">Change your password</a>*@
@if (ViewBag.message123 != null)
{
    <div class="alert-success">@ViewBag.message123 </div>
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-register">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MaNguoiDung)

        <div class="form-group">
            @Html.LabelFor(model => model.Hoten, "Name", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Hoten, new { htmlAttributes = new { @class = "textarea" } })
                <a class="text-danger">@ViewBag.message1</a>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Dienthoai, "Phone number", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Dienthoai, new { htmlAttributes = new { @class = "textarea" } })
                <a class="text-danger">@ViewBag.message2</a>
            </div>
        </div>

        @*<div class="form-group">
            @Html.LabelFor(model => model.Matkhau, "Mật khẩu", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Matkhau, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Matkhau, "", new { @class = "text-danger" })
            </div>
        </div>*@
        <div class="form-group">
            @Html.LabelFor(model => model.Diachi, "Address", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Diachi, new { htmlAttributes = new { @class = "textarea" } })
                <a class="text-danger">@ViewBag.message3</a>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="registerbtn" onsubmit="alert('Save succsessfull')" />
            </div>
        </div>
    </div>
}


