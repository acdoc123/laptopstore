@model IEnumerable<Ictshop.Models.Donhang>

@{
    ViewBag.Title = "My Orders";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var y = "Accepted";
    var n = "Not Accepted";
}
<style>
    #customers {
        font-family: Arial, Helvetica;
        border-collapse: collapse;
        width: 80%;
    }

        #customers td, #customers th {
            border: 2px solid #ddd;
            padding: 10px;
        }

        #customers tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        #customers tr:hover {
            background-color: #ddd;
        }

        #customers th {
            padding-top: 12px;
            padding-bottom: 12px;
            text-align: left;
            background-color: #6A0888;
            color: white;
        }
        h2{
  font-size:25px;
  text-transform:uppercase;
  letter-spacing:2px;
  margin-top: 10px;
  margin-bottom:20px;
  color: #6A0888;
}
        h1{
  font-size:15px;
  letter-spacing:1px;
  margin-top: 5px;
  margin-bottom:5px;
  text-align:right;
  margin-right:10px;
}

</style>

<br />
<h1>Hello, @ViewBag.Name</h1>
<h2>My Orders</h2>
<h3 style="color:orangered">*You can't cancel orders Accepted</h3>
<table id="customers">
    <tr>
        <th>
            Order date
        </th>
        <th>
            Status
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Ngaydat)
        </td>
       
            @if (item.Tinhtrang == null)
            {
                <td>
                    <a>@n</a>
                </td>
                <td>
                    @Html.ActionLink("Cancel", "Cancle", new { id = item.Madon }, new { onclick = "return confirm('Are you sure?');" }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Madon })
                </td>
            }
            else
            {
                <td>
                    <a>@y</a>
                </td>
                <td>
                   
                    @Html.ActionLink("Details", "Details", new { id = item.Madon })
                </td>
            }
                
        
    </tr>
}

</table>
<br />
